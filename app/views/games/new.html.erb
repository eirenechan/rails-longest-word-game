<h1>NEW GAME</h1>

<ul>
<% @letters.each do |letter| %>
  <li><%= letter %></li>
<% end %>
</ul>

<form action="/score">
  <label for="">What is the longest word you can find?</label><br><br>
  <input type="text" name="word" method="get" data-turbo="false" placeholder="Type your word!">
  <input type="submit" value="Play">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
